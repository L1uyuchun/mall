/* miniprogram/pages/vipUser/vipUser.wxss */
page{
  background-color: #eeeeee;
  color: #333333;
}
.login{
  height: 80rpx;
  padding: 20rpx 40rpx 20rpx 40rpx;
  overflow: hidden;
  background-color: #19b88c;
}
.login .userImg{
   display: block;
   width: 80rpx;
   height: 80rpx;
   float: left;
}
.login .login_text{
  width: 171rpx;
  margin-left: 20rpx;
  float: left;
  color: #ffffff;
  position: relative;
  height: 80rpx;
}

.login .login_text .loginTextTop{
  font-size: 28rpx;
  
}
.login .login_text .arrow{
  font-size: 0rpx;
  border: 10rpx solid transparent;
  border-left: 10rpx solid #ffffff;
  position: absolute;
  top:10rpx;
  right:0rpx;
}
.login .login_text .arrow1{
  font-size: 0rpx;
  border: 10rpx solid transparent;
  /* border-left: 10rpx solid #19b88c; */
  position: absolute;
  top:-9rpx;
  right:-5rpx;
}
.login .login_text .atTime{
  font-size: 21rpx;
}
.login .login_right{
  width: 60rpx;
  height: 80rpx;
  float: right;
}
.login .login_right .sweep{
  width: 62rpx;
  height: 35rpx;
}
.login .login_right .vipcode{
  font-size: 20rpx;
  color: #ffffff;
}
.box{
  width: 100%;
  height: 40rpx;
  padding: 20rpx 0rpx;
  background-color: #19b88c;
  display: flex;
  flex-direction: row;
}
.box view{
  width: 33.33%;
  border-right: 2rpx solid #ffffff;
}
.box view text{
  display: block;
  text-align: center;
  color: #ffffff;
  font-size: 20rpx;
  line-height: 20rpx;
}
.box .last{
  border: none;
}
.elseClassification{
  width: 100%;
  margin-top: 40rpx;
  background-color: #ffffff;
}
.elseClassification .li{
  padding: 0rpx 10rpx;
  position: relative;
  height: 68rpx;
  line-height: 68rpx;
  border-bottom: 2rpx solid #cccccc;
  font-size: 24rpx;
}
.elseClassification .arrow{
  position: absolute;
  top: 20rpx;
  right: 10rpx;
  font-size: 0rpx;
  border: 12rpx solid transparent;
  border-left: 12rpx solid #cccccc;
}
.elseClassification .arrow1{
  position: absolute;
  top: -12rpx;
  right: -8rpx;
  font-size: 0rpx;
  border: 12rpx solid transparent;
  border-left: 12rpx solid #ffffff;
}

