page{
  width: 100%;
  height: 100%;
}
.top{
  width: calc(100%-40rpx);
  height: 4%;
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #cccccc;
}
.top .text{
  display: block;
  width:200rpx; 
  font-size: 36rpx;
  color: #19b88c;
  font-weight: bold;
  font-family:'Courier New', Courier, monospace sans-serif;
}
.top input{
  display: block;
  width: 400rpx;
  border: 2rpx solid #eeeeee;
  border-radius: 5px;
  background-color: #fcf7f7;
  margin-right: 30rpx;
  height: 43rpx;
  min-height: 40rpx;
  
}
.placeholdertext{
  text-align: center;
  font-size: 24rpx;
}
.top .sweepcode{
  display: block;
  width: 55rpx;
  height: 50rpx;
}
.bottom{
  width: 100%;
  height:94%;
}
.bottom .leftClassification{
  float: left;
  width: 200rpx;
  height: 100%;
  margin-right: 20rpx;
}
.leftClassification .item{
  width: 100%;
  height: 100rpx;
  background-color: rgba(223, 223, 223, 0.562);
  line-height: 50rpx;
  color: #333333;
  text-align: center;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.right{
  width: 510rpx;
  float: left;
  height:96%;
  padding: 20rpx 20rpx 20rpx 0rpx;

}
.right image{
  width: 100%;
  height: 100rpx;
}
.right .item_goods{
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #CCCCCC;
}
.right .item_goods image{
  display: block;
  padding:40rpx 20rpx;
  width: 110rpx;
  height: 120rpx;
}
.right .item_goods .goods_details{
  display: block;
 
  width: 360rpx;
  height: 200rpx;

}
.right .item_goods .goods_details text{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: block;
  width: 100%;
}
.right .item_goods .goods_details .goods_tit{
  font-size: 30rpx;
  color: #000000;
  height: 60rpx;
  line-height: 80rpx;
  
}
.right .item_goods .goods_details .small_details{
  width: 80%;
  font-size: 24rpx;
  color: #999999;
  font-size: 22rpx;
}
.right .item_goods .goods_details .spreat{
  width: 100%;
  height:36rpx;
  margin-top: 40rpx; 
  overflow: hidden
}
.right .item_goods .goods_details .spreat .pirce{
  float: left;
  color: rgb(255, 187, 0);
  width: 80rpx;
  font-size: 26rpx;
}
.right .item_goods .goods_details .spreat .oldpirce{
  float: left;
  color: #999999;
  width: 80rpx;
  font-size: 22rpx;
  line-height: 45rpx;
  text-decoration: line-through;
}
.right .item_goods .goods_details .spreat image{
  width: 36rpx;
  height: 36rpx;
  float: right;
  border-radius: 50%;
  padding:0rpx;
  width:36rpx;
  height:36rpx;
  background-color:#19b88c;

}
