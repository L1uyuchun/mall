/* miniprogram/pages/order/order.wxss */
.topNav{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #cccccc;
}
.topNav text{
  display: block;
  width: 33.33%;
  height: 80rpx;
  line-height: 80rpx;
  color: #000;
  text-align: center
}
.topNav .cur{
  color: '#19b88c';
  height: 76rpx;
  line-height: 76rpx;
  border-bottom: 4rpx solid #19b88c;
}
.noLogin{
  width: 100%;
  padding-top: 60rpx;
}
.noLogin image{
  width: 280rpx;
  height: 280rpx;
  display: block;
  margin: 0 auto;
}
.noLogin .tips{
  display: block;
  text-align: center;
  color: #666666;
  font-size: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.noLogin button{
  display: block;
  margin: 0 auto;
  width:220rpx;
  height: 58rpx; 
  color: #ffffff;
  background-color: #19b88c;
  margin-top: 50rpx;
}