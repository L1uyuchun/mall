/* miniprogram/pages/addr/addr.wxss */
page{
  font-size: 24rpx;
  color: #333333;
  height: 100%;
}
.topSearch{
  width: 90%;
  height: 40rpx;
  background-color: #fcfafa;
  margin: 0 auto;
  overflow: hidden;
  border: 2rpx solid #eeeeee;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}
.topSearch .province{
 padding: 0rpx 20rpx;
 width: 100rpx;
 height: 40rpx;
 line-height: 40rpx;
 position: relative;
 float: left;
 border-right:2rpx solid #cccccc; 
}
.topSearch .province .arrow{
  font-size: 0rpx;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #999999;
  position: absolute;
  top: 16rpx;
  right: 6rpx;
}
.topSearch .inputAddr{
  display: block;
  float: left;
  height: 40rpx !important;
  padding-left: 8rpx;
  min-height: 10rpx !important;
}
.warning{
  padding-left: 20rpx;
  background-color: rgba(255, 166, 0, 0.247);
  height: 40rpx;
  line-height: 40rpx;
}
.location_tit{
